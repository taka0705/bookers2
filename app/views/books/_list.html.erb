<h2>User info</h2>
  <%= image_tag user.get_profile_image(100,100) %>
  <p>name <%= user.name %></p>
  <p>introduction <%= user.introduction %></p>
  <%= link_to "プロフィール編集", edit_user_path(user)%>

<h2>New book</h2>


<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <div><%= f.submit 'Create Book' %></div>
<% end %>