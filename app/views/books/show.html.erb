<div class="container">
  <div class="row">
    <div class="col-md-3">
<%= render 'list',user: @book.user %>
    </div>

<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>
  <table class="table">
    <tbody>
      <tr>
        <td>
            <%= link_to user_path(@book.user) do %>
            <%= image_tag @book.user.get_profile_image(100,100) %>
            <% end %>
            <p><%= link_to @book.user.name,user_path(@book.user.id) %></p></td>
        <td><%= link_to @book.title,book_path(@book.id)  %></td>
        <td><%= @book.body %></td>
        <td>
          <% if @book.user == current_user %>
          <%= link_to "Edit",edit_book_path(@book.id),class: "btn btn-success" %>
          <% end %>
        </td>
        <td>
          <% if @book.user == current_user %>
          <%= link_to "Destroy",book_path(@book.id),method: :delete,"data-confirm"=>"本当に消しますか?",class: "btn btn-danger" %>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
  </div>
</div>